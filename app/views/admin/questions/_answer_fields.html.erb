<div class="nested-fields panel panel-default">
  <div class="panel-body">
    <%= link_to_remove_association icon("fa fa-close"), f, class: "btn btn-default btn-sm" %>
    <div class="row">
      <div class="col-xs-8 col-sm-10">
        <%= f.text_field :description, label: false, placeholder: "Description" %>
      </div>
      <div class="col-xs-4 col-sm-2">
        <%= f.check_box :correct %>
      </div>
    </div>
  </div>
</div>
